{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "variable",
              "format": [ "PascalCase", "snake_case", "UPPER_CASE"]
            }
        ],
        "max-depth": [
            "error",
            { "max": 3 }
        ]
    }
}